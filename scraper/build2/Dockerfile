FROM ghcr.io/osgeo/gdal:alpine-small-3.9.1

RUN apk update && \
    apk add --no-cache build-base python3 py3-pip python3-dev

# Copy requirements file and install Python dependencies in a single step
COPY requirements.txt .

# Remove EXTERNALLY-MANAGED file and install dependencies
RUN rm /usr/lib/python*/EXTERNALLY-MANAGED && \
    python3 -m ensurepip && \
    pip3 install --no-cache-dir -r requirements.txt

# Copy your script
COPY batch_script.py .

# Set the entry point
CMD ["python3", "batch_script.py"]